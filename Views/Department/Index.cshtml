@model Department
@{
    ViewData["Title"] = "Department";
}

<table class="table table-light table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Department Name</th>
            <th scope="col">Department Description</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Department data in ViewData["DepartmentData"] as IList<Department> ?? default!)
        {
            var parms = new Dictionary<string, string>()
            {
                { "Id", @data.Id.ToString() },
                { "DepartmentName",@data.DepartmentName },
                { "Description", @data.Description }
            };
            <tr>
                <td>@data.Id</td>
                <td>@data.DepartmentName</td>
                <td>@data.Description</td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                            Action
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Department" asp-all-route-data="parms"
                                asp-action="EditForm">Edit</a>
                            </li>
                            <li><a class="dropdown-item" asp-route-id="@data.Id" asp-area="" asp-controller="Department"
                                asp-action="Delete">Delete</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
