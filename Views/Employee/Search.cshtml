@model SearchDto
@{
    ViewData["Title"] = "Search Employee";
}

<form asp-controller="Employee" asp-action="Search" method="post">
    <div class="input-group mb-3">
        <select class="form-select border border-secondary" aria-label="Search By" asp-for="filter">
            <option value="all" selected>Search by All</option>
            <option value="Id">Search By Id</option>
            <option value="Fname">Search By First Name</option>
            <option value="Lname">Search By Last Name</option>
            <option value="Gender">Search By Gender</option>
            <option value="Email">Search By Email</option>
            <option value="Address">Search By Address</option>
            <option value="DepartmentId">Search By Department ID</option>
        </select>
        <input asp-for="searchPhrase" type="text" class="form-control border border-secondary" aria-label="Text input with dropdown button">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end ms-2">
            <button class="btn btn-light border border-secondary" type="submit">Search</button>
        </div>
    </div>
</form>
<partial name="Index"/>
